<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JobLyst" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorPrimaryDark">#FF0000</item>
        <!-- Secondary Color -->
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
    <style name="Theme.JobLyst" parent="android:Theme.Material.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorSecondaryVariant">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>
    <style name="Base.Theme.JobLyst.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Base.Theme.JobLyst.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Base.Theme.JobLyst.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
